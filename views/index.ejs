<%- include('./partials/header') %>

<div class="content">
    <h2>Browse Activities by Category</h2>
    <div class = "activities-grid">
        <% activities.forEach(function(a) { %>
            <% if(a.public || (user && user._id.equals(a.user))) { %> 
                <div class="activity-block">
                    <a href= "/activities/<%= a._id %>"><%= a.title %></a>
                    <%= a.category %>
                    <% if(a.location) { %>
                        <%= a.location %>
                    <% } %>
                </div>
            <% } %>
        <% }) %>
        
        <% if(user) { %>
            <a href = "/activities/new">Add New Activity</a>
        <% } %>
    </div>
    <% if (user) { %>
        <div class = "dates-grid">
            <h2>Your Date Night Plans</h2>
            <% dateplans.forEach(function(d) { %> 
                <div class = "date-block">
                    <a href= "/dateplans/<%= d._id %>"><%= d.title %></a>                
                    <% if (d.date) { %>
                        <%= d.date.toDateString() %>
                    <% } %>
                    <%= d.location %>
                </div>
            <% }) %> 
            <a href = "/dateplans/new">Add New Date Plan</a>
        </div>
    <% } %>
</div>
<%- include('./partials/footer') %>
