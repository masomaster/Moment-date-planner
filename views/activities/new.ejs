<%- include('../partials/header') %>

<div class="content browse-page">
  <h1><%= title %></h1>
    <form action="/activities" method="POST">
      <table>
        <tr>
          <th>
            <label>Title:
          </th>
          <td>
              <input type="text" name="title">
            </label>
          </td>
        </tr>
        <tr>
          <th>
            <label>Location: 
          </th>
          <td>
              <input type="text" name="location">
            </label>
          </td>
        </tr>
        <tr>
          <th>
            <label>Website: 
          </th>
          <td>
            <input type="url" name="url">
          </label>
          </td>
        </tr>
        <tr>
          <th>
            <label>Vibe: 
          </th>
          <td>
            <select name="vibe">
              <option value="Romantic">Romantic</option>
              <option value="Chill">Chill</option>
              <option value="Hipster">Hipster</option>
              <option value="Energetic">Energetic</option>
              <option value="Adventure">Adventure</option>
            </select>
          </td>
        </tr>
      </label>
      <tr>
        <th>
          <label>Category:
        </th>
        <td>
            <select name="category">
              <option value="Food">Food</option>
              <option value="Drinks">Drinks</option>
              <option value="Entertainment">Entertainment</option>
              <option value="Outdoors">Outdoors</option>
              <option value="Physical Activity/Exercise">Physical Activity/Exercise</option>
              <option value="Sightseeing">Sightseeing</option>
            </select>
          </label>
        </td>
      </tr>
      <tr>
        <th>
          <label>Notes: 
        </th>
        <td>
            <textarea name="notes"></textarea>
          </label>
        </td>
      </tr>
      <tr>
        <th>
          <label>Visibility:
        </th>
        <td>
            <div>
              <input type="radio" id="public" name="public" value="true" checked="checked">
              <label for="public">Public</label><br>
              <input type="radio" id="private" name="public" value="false">
              <label for="private">Private</label><br>
            </div>
          </label>
        </td>
      </tr>
      </table>
      <input type="submit" value="Create Activity">
    </form>
</div>

<%- include('../partials/footer') %>