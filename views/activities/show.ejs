<%- include('../partials/header') %>

<div class="content">
    <table>
        <tr>
            <th>Location:</th>
            <td><%= activity.location %></td>
        </tr>
        <tr>
            <th>Website:</th>
            <% if(activity.url) { %>
                <td><a href = <%= activity.url %> target="_blank">
                    <%= activity.title %>
                </a></td>
            <% } %>
        </tr>
        <tr>
            <th>Vibe:</th>
            <td><%= activity.vibe %></td>
        </tr>
        <tr>
            <th>Category:</th>
            <td><%= activity.category %></td>
        </tr>
        <tr>
            <th>Notes:</th>
            <td><%= activity.notes %></td>
        </tr>
        <tr>
            <th>Visible to Others?</th>
            <td>
                <% if (activity.public) { %>
                    Sure is!
                <% } else { %>
                    Nope!
                <% } %>
            </td>
        </tr>
    </table>
    <% if(user && user._id.equals(activity.user)) { %>
        <form action = "/activities/<%= activity._id %>/edit">
            <button type="submit">Edit Activity</button>
        </form>
    <% } %>
    <% if(user && user._id.equals(activity.user)) { %>
        <form action = "/activities/<%= activity._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete Activity</button>            
        </form>
    <% } %>

</div>
<%- include('../partials/footer') %>
