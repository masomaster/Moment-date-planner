<%- include('../partials/header') %>

<div class="content">
    <div class="activity-grid">
        <table>
            <thead>
                <tr>
                    <th>Activity</th>
                    <th>Category</th>
                    <th>Location</th>
                    <th>Vibe</th>
                </tr>
            </thead>
            <tbody>
                <% activities.forEach(function(a) { %>
                    <% if(a.public || (user && user._id.equals(a.user))) { %> 
                        <div class="activity-row">
                            <tr>
                                <td>
                                    <a href= "/activities/<%= a._id %>"><%= a.title %></a>
                                </td>
                                <td>
                                    <%= a.category %>
                                </td>
                                <td>
                                    <%= a.location %>
                                </td>
                                <td>
                                    <%= a.vibe %>
                                </td>
                            </tr>
                        </div>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>
